<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->

    </style>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--解决部分华为手机底部导航栏遮住问题 -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Titile_color" >
        <item name="android:background">@color/red_text</item>
    </style>

    <style name="immersion_status">
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 弹出框动画样式 -->
    <style name="top_popup" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!-- 自定义相机相关dialog样式 -->
    <style name="myDialogStyle" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/myAnim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity上面 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- dialog进出入动画-位移 -->
    <style name="myAnim" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/l_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/l_dialog_exit</item>
    </style>
    <!--自定义dialog-->
    <style name="mystyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
